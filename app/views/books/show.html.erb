
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', user: @user, book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(params[:id]) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td>
              <%= link_to 'Edit', edit_book_path(params[:id]), class: "btn btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(params[:id]), method: :delete, "deta-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>